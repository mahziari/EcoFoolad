@using Application.Services.FrontEnd.Blogs.Queries
@model ResultGetBlogsDetailsFrontEndDto
@using Application.Services.FrontEnd.Common
@using Microsoft.AspNetCore.Http.Extensions
@using System.Web
@inject ISiteSetting _siteSetting;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = Model.Blog.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head{
    <meta name="description" content="@Model.Blog.NewsSummery">
    <link rel="canonical" href="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path.Value">
    <meta property="og:locale" content="fa_IR">
    <meta property="og:type" content="@Model.Blog.en_NewsGroupName">
    <meta property="og:title" content="@Model.Blog.Title - @_siteSetting.GetSiteSetting().SiteName">
    <meta property="og:description" content="@Model.Blog.NewsSummery">
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path.Value">
    <meta property="og:site_name" content="@_siteSetting.GetSiteSetting().SiteName">
    <meta property="article:section" content="@Model.Blog.NewsGroupName">
    <meta property="article:published_time" content="@Model.Blog.LocalTime">
    <meta property="og:updated_time" content="@Model.Blog.LocalTime">
    <meta property="og:image" content="@Context.Request.Scheme://@Context.Request.Host/@Model.Blog.HeadLine">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@@ecofoolad">
    <meta name="twitter:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path.Value">
    <meta name="twitter:description" content="@Model.Blog.NewsSummery">
    <meta name="twitter:title" content="@Model.Blog.Title - @_siteSetting.GetSiteSetting().SiteName">
    <meta name="twitter:image" content="@Context.Request.Scheme://@Context.Request.Host/@Model.Blog.HeadLine">
    <meta name="twitter:creator" content="@@ecofoolad"/>
}

@section Foo{
    <script type="application/ld+json">
    {
    "@@context":"https://schema.org",
    "@@type":"@Model.Blog.en_NewsGroupName",
    "headline":"@Model.Blog.Title",
    "image":{
    "@@type":"ImageObject",
    "url":"@Context.Request.Scheme://@Context.Request.Host/@Model.Blog.HeadLine",
    "height":822,
    "width":522
    },
    "author":"سردبیر خبری",
    "editor":"سردبیر خبری",
    "genre":"سردبیر خبری",
    "wordcount":2603,
    "publisher":{
    "@@type":"Organization",
    "name":"@_siteSetting.GetSiteSetting().SiteName",
    "logo":{
    "@@type":"ImageObject",
    "url":"@_siteSetting.GetSiteSetting().LogoImage",
    "width":"211",
    "height":"60"
    }},
    "url":"@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path.Value",
    "datePublished":"@Model.Blog.LocalTime",
    "dateCreated":"@Model.Blog.LocalTime",
    "dateModified":"@Model.Blog.LocalTime",
    "description":"@Model.Blog.NewsSummery"
    }
    </script>
}


<div class="container" style="margin-top:20px;">


    <section class="content_right_blog">

        <div class="main_content_post_blog">

            <ul class="woocommerce-breadcrumb">
                <li>
                    <a href="/">@_siteSetting.GetSiteSetting().SiteName</a>
                </li>
                <span>/</span>
                <li>
                    <a href="/">بلاگ</a>
                </li>
                <span>/</span>

                <li>
                    <a asp-controller="Blogs"
