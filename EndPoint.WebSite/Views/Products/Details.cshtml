@using Application.Services.FrontEnd.Products.Queries
@model ResultGetProductsDetailsFrontEndDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = Model.Product.PrdName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{
    <meta property="product:condition" content="new">
    <meta property="product:availability" content="in stock">
    <meta property="product:price:amount" content="29000000">
    <meta property="product:price:currency" content="IRR">
    <script src="~/assets/js/apexcharts.min.js"></script>
}

@section Scripts
{
    <script>
                var options = {
                    series: [{
                        name: 'قیمت محصول',
                        data: [31, 40, 28, 51, 42, 109, 100]
                    }, {
                        name: 'میانگین قیمت کل بازار',
                        data: [11, 32, 45, 32, 34, 52, 41]
                    }],
                    chart: {
                        height: 350,
                        type: 'area'
                    },
                    dataLabels: {
                        enabled: true
                    },
                    stroke: {
                        curve: 'smooth'
                    },
                    xaxis: {
                        type: 'datetime',
                        categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
                    },
                    tooltip: {
                        x: {
                            format: 'dd/MM/yy'
                        },
                    },
                };
      
                var chart = new ApexCharts(document.querySelector("#chart-@Model.Product.ProductId"), options);
                chart.render();
            </script>
}


