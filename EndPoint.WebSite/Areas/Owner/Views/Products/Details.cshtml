@using Application.Services.BackEnd.Admin.Products.Queries
@model Application.Services.BackEnd.Owner.Products.Queries.ResultGetDetailsProductDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "نمایش محصول جدید ";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}


<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- app invoice View Page -->
            <section class="invoice-view-wrapper">
                <div class="row">
                    <!-- invoice view page -->
                    <div class="col-xl-12 col-md-8 col-12">
                        <div class="card invoice-print-area">
                            <div class="card-content">
                                <div class="card-body pb-0 mx-25">
                                    <!-- header section -->
                                    <div class="row">
                                        <div class="col-xl-4 col-md-12">
                                            <span class="invoice-number mr-50">شماره سفارش:</span>
                                            <span>@Model.Product.PrdCode</span>
                                        </div>
                                        <div class="col-xl-8 col-md-12">
                                            <div class="d-flex align-items-center justify-content-xl-end flex-wrap">
                                                <div class="mr-3">
                                                    <small class="text-muted">
                                                        تاریخ سفارش:
                                                    </small>
                                                    <span>@Model.Product.RegisterDatePersian</span>
                                                </div>
                                                @* <div> *@
                                                @*   <small class="text-muted">Date Due:</small> *@
                                                @*   <span>08/10/2019</span> *@
                                                @* </div> *@
                                            </div>
                                        </div>
                                    </div>
                                    <!-- logo and title -->
                                    <div class="row my-3">
                                        <div class="col-4">
                                            <span>نام محصول:</span>
                                            <h4 class="text-primary">@Model.Product.PrdName</h4>
                                        </div>
                                        <div class="col-4">
                                            <span>نام شرکت سازنده:</span>
                                            <h4 class="text-primary">@Model.Product.CompanyProducts.CmpName</h4>
                                        </div>

                                        <div class="col-4 d-flex justify-content-end">
                                            <img src="~/BackEnd/Admin/images/logo/logo.png" alt="logo" height="46" width="164">
                                        </div>
                                    </div>
                                    <hr>
                                    <!-- invoice address and contact -->
                                    <div class="row invoice-info">
                                        <div class="col-6 mt-1">
                                            <h6 class="invoice-from">جز منوی:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdGroupId.Sgname</span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row invoice-info">
                                        <div class="col-6 mt-1">
                                            <h6 class="invoice-from">واحد محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.UnitProducts.Unit</span>
                                            </div>

                                            <h6 class="invoice-from">سایز محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdSize</span>
                                            </div>

                                            <h6 class="invoice-from">قیمت محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdPrice</span>
                                            </div>
                                        </div>

                                        <div class="col-6 mt-1">
                                            <h6 class="invoice-to">موجودی محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdMaxQty</span>
                                            </div>

                                            <h6 class="invoice-from">مدل محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdModel</span>
                                            </div>


                                            <h6 class="invoice-from">توضیحات محصول:</h6>
                                            <div class="mb-1">
                                                <span>@Model.Product.PrdDescription</span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>