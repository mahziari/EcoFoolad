   <script>
   //Copy to Clip Board
       function copyToClipboard(element) {
         var $temp = $("<input>");
         $("body").append($temp);
         $temp.val($(element).text()).select();
         document.execCommand("copy");
         $temp.remove();
         alert("لینک عکس با موفقیت کپی شد");
       }
    </script>
