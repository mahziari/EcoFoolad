@using EndPoint.Web.Areas.Auth.Data.Dto
@model EndPoint.Web.Areas.Auth.Data.Dto.CheckOutDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ورود/ثبت نام ";
    Layout = "~/Areas/Auth/Views/Shared/_Layout.cshtml";
}


@section Head{
    <link rel='stylesheet' id='main-theme-style-css-css'
          href='~/wp-content/themes/newkala/style.css?ver=5.1.4' type='text/css'
          media='all'/>
    <link rel='stylesheet' id='woocommerce-general-rtl-css'
          href='~/wp-content/plugins/woocommerce/assets/css/woocommerce-rtl.css?ver=4.7.0'
          type='text/css' media='all'/>

    <link rel="stylesheet" type="text/css"
          href="~/wp-content/themes/newkala/css/woocommerce_dashboard.css">

    <link rel="stylesheet" type="text/css"
          href="~/wp-content/themes/newkala/inHead.css">

    <link rel="stylesheet" type="text/css"
          href="~/css/Auth.css">

}

@section Foo{
    <partial name="_ValidationScriptsPartial"/>
    <script>$('.alertSlideUp').delay(3000).slideUp(300); </script>
}


<main>
    <div class="sp_body_panel">
        <div class="woocommerce">
            <div class="main_login_form">
                <a href="https://newkalatheme.ir/preview">
                    <img style="display:block;margin:20px auto;" src="~/Images/Settings/Logo-Header.jpg" title="اکوفولاد ">
                </a>

                @if (TempData["AuthErrors"] != null)
                {
                    <ul class="woocommerce-error alertSlideUp">
                        <li>
                            <strong>خطا:</strong>
                            @TempData["AuthErrors"]
                        </li>
                    </ul>
                }


                <div class="woocommerce-notices-wrapper"></div>


                <h2>ورود/ثبت نام</h2>

                <form asp-controller="Account" asp-action="CheckOut" method="post" class="woocommerce-form woocommerce-form-register register">

                    <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                        <label>شماره موبایل خود را وارد کنید &nbsp;<span class="required">*</span></label>
                        <input asp-for="PhoneNumber" type="text" class="woocommerce-Input woocommerce-Input--text input-text"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </p>

                    <div class="woocommerce-privacy-policy-text"></div>

                    <p class="woocommerce-FormRow form-row">
                        <button type="submit" class="woocommerce-Button button go_to_all_products_offer" name="register" value="ورود">ورود به اکوفولاد</button>
                    </p>

                    <input asp-for="ReturnUrl" type="hidden"/>
                </form>

                @* <div class="go_to_register_form">قبلا ثبت نام کرده اید؟<a href="" > وارد شوید</a></div> *@
                <div class="go_to_register_form">
                    با ورود و یا ثبت نام در اکوفولاد کالا شما
                    <a href="/page/terms/" target="_blank">
                        شرایط و قوانین
                    </a>
                    <br/>
                    استفاده از سرویس های سایت و
                    <a href="/page/privacy/" target="_blank">
                        قوانین حریم خصوصی
                    </a>
                    <br/>
                    آن را می پذیرید.
                </div>

            </div>

        </div>
    </div>
</main>